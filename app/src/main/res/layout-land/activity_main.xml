<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout for MainActivity:
     - Header + controls on top
     - Two lists side-by-side (main vs all currencies)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Header and controls (same as portrait) -->
    <TextView
        android:id="@+id/salutation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Welcome to Mobile Platform Development" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press to get data" />

    <TextView
        android:id="@+id/acknowledgement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Contains Fx Currency Exchange data" />

    <!-- Search row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search by code, name, country..."
            android:singleLine="true" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />
    </LinearLayout>

    <!-- Two lists side by side -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left: main currencies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="4dp">

            <TextView
                android:id="@+id/mainCurrenciesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main currencies (GBP â†’ USD, EUR, JPY):"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listMainCurrencies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Right: all currencies -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <TextView
                android:id="@+id/allCurrenciesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All currencies:"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listAllCurrencies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
